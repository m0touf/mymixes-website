{
    "compilerOptions": {
      "target": "ES2020",                  
      "module": "CommonJS",               
      "rootDir": "src",                    
      "outDir": "dist",                    
      "strict": true,                      
      "esModuleInterop": true,             
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true                 
    },
    "include": ["src", "src/types/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  